{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "Statement1",
      "Effect": "Deny",
      "Principal": "*",
      "Action": "sts:AssumeRole",
      "NotResource": "arn:aws:iam::100000000002:role/TestCrossAccount",
      "Condition": {
        "Null": {
          "sts:ExternalId": "true"
        },
        "StringNotEquals": {
          "aws:PrincipalOrgId": "o-11111111"
        },
        "BoolIfExists": {
          "aws:PrincipalIsAWSService": "false"
        }
      }
    },
    {
      "Sid": "S3BucketAccess",
      "Effect": "Deny",
      "Principal": "*",
      "Action": ["s3:*"],
      "Resource": ["arn:aws:s3:::restricted-bucket", "arn:aws:s3:::restricted-bucket/*"]
    },
    {
      "Sid": "ListBuckets",
      "Effect": "Deny",
      "Principal": "*",
      "Action": ["s3:ListAllMyBuckets"],
      "Resource": ["*"],
      "Condition": {
        "StringEquals": {
          "aws:PrincipalArn": "arn:aws:iam::100000000002:user/user2"
        }
      }
    }
  ]
}
